@model IEnumerable<Host_Car.Models.CarDetail>


<h1>Muscle Car</h1>

<p>
    @*<a asp-action="Create">Create New</a>*@
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="package-item bg-white mb-2" style="height:540px">
                <img src="~/Image/@item.CarImage" width="100%" height="250px">
                <div class="p-4">
                    <div class="d-flex justify-content-between mb-3">
                        <small class="m-0 text-dark text-center">Permited Age: <br /> <h7 style="color:blue"> @item.AgePermission</h7></small>
                        <small class="m-0 text-dark text-center">Driver Licens Min: <br /> <p style="color:blue">@item.MinimumDriverLicensYear</p></small>
                        <small class="m-0 text-dark text-center">Gear Box Type: <br /> <h7 style="color:blue"> @item.CarTypes.Type</h7></small>
                        <small class="m-0 text-dark">Fuel Type: <br /> <h7 style="color:blue">@item.FuelTypes.Fuel</h7></small>
                    </div>
                    <b style="color:blueviolet">@item.CarClasses.Class</b> | :
                    @item.CarBrands.Brand
                    @item.CarModels.Model
                    <br />
                    <small>
                        <h7>Year of Model: </h7>
                        <h7 style="color:blue">@item.CarModels.Years</h7>
                    </small>
                    <div class="border-top mt-4 pt-4">
                        <div class="d-flex justify-content-between">
                            <small class="m-0 text-dark">Online Price: <br /> <b style="color:gold">@item.CarPrices.OnlinePrice.ToString("C")</b></small>
                            <small class="m-0 text-dark">Price to Adress: <br /> <b style="color:gold">@item.CarPrices.CustomerAdressPrice.ToString("C")</b> </small>
                            <small class="m-0 text-dark">Standart Price: <br /> <b style="color:gold">@item.CarPrices.StandartPrice.ToString("C")</b></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>