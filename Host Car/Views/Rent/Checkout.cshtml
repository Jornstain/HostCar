@model Order
@using Microsoft.Extensions.Options
@inject IOptions<Host_Car.Utility.StripeConfig> Stripe

<br />
<h2>Pproduct Info</h2>

<div class="row">
    <form action="/create-checkout-session" method="POST">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="package-item bg-white mb-2" style="width:250px">
                <img src="~/Image/@Model.CarDetails.CarImage" width="250px" height="250px">
                <div class="p-4">
                    <div class="d-flex justify-content-between mb-3" >
                        <small class="m-0 text-dark text-center">Car Name: <br /> @Model.CarDetails.CarBrands.Brand</small>
                        <small class="m-0 text-dark text-center">Rent Price: <br /> @Model.CarDetails.CarPrices.OnlinePrice.ToString("c")</small>
                    </div>
                    <div class="border-top mt-4 pt-4">
                        <div class="d-flex justify-content-between">
                            <button type="submit">Pay</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>